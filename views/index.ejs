<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Node Twitter</title>
  <!-- <link rel="shortcut icon" href="favicon.ico"> -->
  <!-- <link rel="stylesheet" href="styles.css"> -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
  </head>
<body>
  <h1>Twitter</h1>

  <h3>Tweets</h3>
  <ul class="tweets">
  <% for(var i=0; i<tweets.length; i++) {%>
    <li class="message">
      <span><%= tweets[i].tweet %></span>
      <span><%= tweets[i].heart %></span>
      <span><i class="fas fa-heart" aria-hidden="true"></i></span>
      <span><%= tweets[i].retweet %></span>
      <span><i class="fas fa-retweet" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <form action="/tweets" method="POST">
    <input type="text" placeholder="What's on your mind?" name="tweet">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
